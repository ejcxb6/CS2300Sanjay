<Window x:Class="CoronaUniversityDatabase.TeacherGrade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoronaUniversityDatabase"
        mc:Ignorable="d"
        Title="TeacherGrade" Height="450" Width="800">
    <Grid>
        <DataGrid Name="StudentGrades" ItemsSource= "{Binding}" SelectedIndex="{Binding CourseIndex, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" HorizontalAlignment="Left" Height="215" Margin="10,29,0,0" VerticalAlignment="Top" Width="772"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="662,332,0,0" VerticalAlignment="Top" Width="75" Click="Edit_Click"/>
        <TextBox Name="StudentID" HorizontalAlignment="Left" Height="23" Margin="180,338,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="104"/>
        <TextBox Name="newgrade" HorizontalAlignment="Left" Height="23" Margin="424,338,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="102"/>
        <Label Content="Student ID:" HorizontalAlignment="Left" Margin="190,299,0,0" VerticalAlignment="Top" Width="94"/>
        <Label Content="Updated Grade:" HorizontalAlignment="Left" Margin="424,299,0,0" VerticalAlignment="Top" Width="102"/>

    </Grid>
</Window>
